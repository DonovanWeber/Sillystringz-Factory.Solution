@{
  Layout = "_Layout";
}
@model SillystringzFactory.Models.Engineer
<div class="container">
  <div class=Header>
    <h2> Hire a new <em>Engineer!</em></h2>
  </div>
  <div id=engineer_create>
    @using(Html.BeginForm())
    {
      @Html.LabelFor(model => model.Name)
      @Html.TextBoxFor(model => model.Name)
      <br>
      @Html.LabelFor(model => model.Age)
      @Html.TextBoxFor(model => model.Age)
      <br>
      @Html.Label("Select which machine to repair")
      @Html.DropDownList("MachineId")
      <br>
      <input type="submit" value="Add new engineer" 
      class="btn btn-primary" />
    }

    <p>@Html.ActionLink("Show all engineers", "Index")</p>
    <p>@Html.ActionLink("Homepage", "Index", "Home")</p>


  </div>

</div>